sell_count_max = 2

[strategy.bolbands]
ma_window = 30
std_deviations = 2
buy_count_max = 2
sell_count_max = 2

[simulation]
hi_signal = +1
lo_signal = -1

[tradebook]
cash_init = 100000
risk_limit = 10000
