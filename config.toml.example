[data_source]
hdf5_file = "~/tick_data/ohlc.h5"
stock_list_file = "~/tick_data/sp10.ini"

[strategy]

[strategy.ema]
ema_window = 30
histogram_min = -3
histogram_max = +3
buy_count_max = 2
sell_count_max = 2

[strategy.macd]
macd_fast = 12
macd_slow = 26
macd_sig = 9
histogram_max = +1
histogram_min = -1
